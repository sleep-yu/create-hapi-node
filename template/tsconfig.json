{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@routes": ["src/routes"],
      "@services": ["src/services"],
      "@clients": ["src/clients"],
      "@interfaces": ["src/interfaces"],
      "@enum": ["src/enum"],
      "@utils": ["src/utils"],
      "@validates": ["src/validates"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
