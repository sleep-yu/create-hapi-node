{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",           
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "bin/**/*"],
  "exclude": ["node_modules", "template", "dist"]
}
